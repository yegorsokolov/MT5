[Unit]
Description=MT5 trading bot
After=network.target

[Service]
Type=simple
WorkingDirectory={{REPO_PATH}}
ExecStartPre={{REPO_PATH}}/deploy/prestart.sh
ExecStart=/usr/bin/env python3 -m mt5.remote_api
EnvironmentFile=-{{REPO_PATH}}/deploy/secrets/influx.env
Restart=on-failure
RestartSec=5
WatchdogSec=30
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
